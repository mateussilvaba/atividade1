import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;

import javafx.geometry.Insets;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;


/**
 *
 * @author aluno@jacobina.intranet
 */
public class CadastroCliente extends Application {
    
 @Override
   public void start(Stage primaryStage) {
       primaryStage.setTitle("Cadastro de Cliente");

       // Componentes da interface
       Label nomeLabel = new Label("Nome:");
       TextField nomeField = new TextField();
       Label cpfLabel = new Label("CPF:");
       TextField cpfField = new TextField();
       Label telefoneLabel = new Label("Telefone:");
       TextField telefoneField = new TextField();
       Button salvarButton = new Button("Salvar");

       // Layout
       GridPane grid = new GridPane();
       grid.setPadding(new Insets(10, 10, 10, 10));
       grid.setVgap(5);
       grid.setHgap(5);

       // Adicionando componentes ao layout
       grid.add(nomeLabel, 0, 0);
       grid.add(nomeField, 1, 0);
       grid.add(cpfLabel, 0, 1);
       grid.add(cpfField, 1, 1);
       grid.add(telefoneLabel, 0, 2);
       grid.add(telefoneField, 1, 2);
       grid.add(salvarButton, 1, 3);

       // Ação do botão salvar
       salvarButton.setOnAction(e -> {
           String nome = nomeField.getText();
           String cpf = cpfField.getText();
           String telefone = telefoneField.getText();

           // Aqui adiciona a lógica para salvar os dados,
           // por exemplo, em um banco de dados ou em uma lista.
           System.out.println("Nome: " + nome);
           System.out.println("CPF: " + cpf);
           System.out.println("Telefone: " + telefone);

           // Limpar os campos após o cadastro
           nomeField.clear();
           cpfField.clear();
           telefoneField.clear();
       });

       // Configurando a cena
       Scene scene = new Scene(grid, 300, 200);
      primaryStage.setScene(scene);

       // Mostrando a janela
       primaryStage.show();
   }

   public static void main(String[] args) {
       launch(args);
   }  
    
}
